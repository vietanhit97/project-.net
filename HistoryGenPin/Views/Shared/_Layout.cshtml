<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HistoryGenPin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/TemplateAdmin/css/sb-admin-2.min.css"/>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - HistoryGenPin - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/TemplateAdmin/js/sb-admin-2.min.js"></script>
    <script src="~/TemplateAdmin/vendor/toastr/toastr.min.js"></script>
    <script>
        function toastrShow(msg, type) {
            if (type == 1) {
                toastr.success(msg);
            } else if (type == 2) {
                toastr.warning(msg);
            } else if (type == 3) {
                toastr.info(msg);
            } else if (type == 0) {
                toastr.error(msg);
            }
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
