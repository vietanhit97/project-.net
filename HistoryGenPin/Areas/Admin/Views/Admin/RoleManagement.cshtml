@{
    ViewData["Title"] = "Quản lý phân quyền";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .btn-icon {
        margin-right: 5px;
        font-size: 0.7rem;
    }
</style>

<body id="page-top" style="overflow-y: hidden;">
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTableRole" width="100%" cellspacing="0">
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
    <!-- Modal Create Role -->
    <div class="modal fade" id="modal_create_role" tabindex="-1" role="dialog" aria-labelledby="modal_create_role" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Thêm mới</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="form_add_role">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="email1">Tên quyền:</label>
                                <input type="text" class="form-control" id="roleName" aria-describedby="roleName" placeholder="--Nhập tên quyền--">
                            </div>
                            <div class="form-group">
                                <label for="description">Mô tả:</label>
                                <input type="text" class="form-control" id="description" placeholder="--Nhập mô tả--">
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Gán quyền:</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="isShowCheck" name="isShowCheck">
                                    <label class="form-check-label" for="isShowCheck">
                                        Được xem
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="isDownloadCheck" name="isDownloadCheck">
                                    <label class="form-check-label" for="isDownloadCheck">
                                        Được download
                                    </label>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="createRole()">Lưu</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Edit Role -->
    <div class="modal fade" id="modal_edit_role" tabindex="-1" role="dialog" aria-labelledby="modal_edit_role" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Chỉnh sửa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="form_edit_role">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="roleName">Tên quyền:</label>
                                <input type="text" class="form-control" id="roleNameEdit" aria-describedby="roleNameEdit" placeholder="--Nhập tên tên quyền--">
                            </div>
                            <div class="form-group">
                                <label for="description">Mô tả:</label>
                                <input type="text" class="form-control" id="descriptionEdit" placeholder="--Nhập mô tả--">
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Gán quyền:</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="isShowCheckEdit" name="isShowCheckEdit">
                                    <label class="form-check-label" for="isShowCheckEdit">
                                        Được xem
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="isDownloadCheckEdit" name="isDownloadCheckEdit">
                                    <label class="form-check-label" for="isDownloadCheckEdit">
                                        Được download
                                    </label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="editRole()">Lưu</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Delete Role -->
    <div class="modal fade" id="modal_delete_role" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Xóa quyền</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="form_delete_account">
                        <div class="modal-body">
                            Xác nhận xóa thông tin này?
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="deleteRole()">Đồng ý</button>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <script src="~/ContentAdmin/js/RoleManagement.js"></script>
    }
</body>